{
    "compilerOptions": {
        "target": "ES2021",
        "baseUrl": ".",
        "module": "NodeNext",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "dist"
    },
    "include": ["src"]
}